# kube-ps1 hack for powerline9k
# shorten the kube-ps1 cluster name for fraudshield
function get_cluster() {
	KUBE_PROVIDER="Kubernetes"
	if [[ $KUBE_PS1_CONTEXT == *"gke_fraudshield"* ]]; then
		KUBE_PS1_CONTEXT=$(echo "$KUBE_PS1_CONTEXT" | cut -d _ -f3-4)
		KUBE_PS1_DIVIDER=' %F{008}\uf460%F{008} '
		KUBE_PROVIDER="GKE"
		KUBE_PS1_CONTEXT="%F{red}${KUBE_PS1_CONTEXT}%F{red}"
		KUBE_PS1_NAMESPACE="%F{green}${KUBE_PS1_NAMESPACE}%F{green}"
	fi
	echo -n "$(_kube_ps1_symbol) ${KUBE_PROVIDER}${KUBE_PS1_DIVIDER}${KUBE_PS1_CONTEXT}${KUBE_PS1_DIVIDER}${KUBE_PS1_NAMESPACE}"
}

